<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".new_search_medicine">

    <SearchView
        android:id="@+id/search_add_medicine"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@drawable/curved_bg_no_color"
        app:layout_constraintBottom_toTopOf="@+id/guideline94"
        app:layout_constraintEnd_toStartOf="@+id/guideline92"
        app:layout_constraintStart_toStartOf="@+id/guideline91"
        app:layout_constraintTop_toTopOf="@+id/guideline93">

    </SearchView>

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/curved_bg_no_color"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintTop_toTopOf="@+id/guideline94">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/heart"></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Trade Name"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="italic|bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Composition"

                android:textSize="12sp"
                android:textStyle="italic|bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Trade Dose"
                android:textSize="12sp"
                android:textStyle="italic|bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Company"
                android:textColor="#11DF57"
                android:textSize="13sp"
                android:textStyle="italic|bold">

            </TextView>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/curved_bg_no_color"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintTop_toBottomOf="@+id/one">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/heart"></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Trade Name"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="italic|bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Composition"

                android:textSize="12sp"
                android:textStyle="italic|bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Trade Dose"
                android:textSize="12sp"
                android:textStyle="italic|bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Company"
                android:textColor="#11DF57"
                android:textSize="13sp"
                android:textStyle="italic|bold">

            </TextView>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/curved_bg_no_color"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintTop_toBottomOf="@+id/two">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/heart"></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Trade Name"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="italic|bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Composition"

                android:textSize="12sp"
                android:textStyle="italic|bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Trade Dose"
                android:textSize="12sp"
                android:textStyle="italic|bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Company"
                android:textColor="#11DF57"
                android:textSize="13sp"
                android:textStyle="italic|bold">

            </TextView>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/curved_bg_no_color"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintTop_toBottomOf="@+id/three">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/heart"></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Trade Name"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="italic|bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Composition"

                android:textSize="12sp"
                android:textStyle="italic|bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Trade Dose"
                android:textSize="12sp"
                android:textStyle="italic|bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/curved_bg_no_color"
                android:padding="5dp"
                android:text="Company"
                android:textColor="#11DF57"
                android:textSize="13sp"
                android:textStyle="italic|bold">

            </TextView>


        </LinearLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/add_medicine_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_add_medicine" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline91"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline93"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline94"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />
</androidx.constraintlayout.widget.ConstraintLayout>